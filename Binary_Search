//Binary Search code


import java.util.*;
 

public class BinarySearch{
    int binarysearch(int arr[], int l, int r, int x){
        
        int mid=l+(r-l) /2;
        
        
        if (l > r) {
    return -1; // element not found
}
       
        if(arr[mid]==x){
            return mid;
        }
        
        if(arr[mid]>x){
            return binarysearch(arr, l,  mid-1,  x);
            
        }
         return binarysearch(arr, mid+1,  r,  x);
         
        
    }
   





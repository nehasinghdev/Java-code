import java.util.*;
public class Test{
    // declare public static void main ackage
     static boolean isSorted(int a[],int n){
        for(int i=1;i<n;i++){
            if(a[i]<a[i-1]){
                return false;
            }
            
               
        }
         return true;
    }
    
    public static void main(String args[]){
        
        //declare variable and take input
        Scanner sc= new Scanner(System.in);
        int n=sc.nextInt();
        //declare array with size n
        int a[]=new int[n];
        // value in array using user for loop
        for(int i=0;i<n;i++){
            a[i]=sc.nextInt();
        }
        //calling isSorted function
        boolean ans=isSorted(a,n);
        if(ans==true){
            System.out.println("yes");
        }
        else{
         System.out.println("No");
        
        }
    //Make function outside main class
    //make boolean as it is returning boolean types
    }
}




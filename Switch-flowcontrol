//largest of three numbers

import java.util.*;
class Test{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        
        System.out.println("Enter number a, b, c");
        int a=sc.nextInt();
        int b=sc.nextInt();
        int c=sc.nextInt();
        
        //give proper condition with greater than equal to value and having and condition

        if(a>=b && a>=c){


            System.out.print("The greatest number is a");
        }

        //else if should be separated


        else if(b>=c && b>=a){
         System.out.print("The greatest number is b"); 
        }

        else{
        System.out.print("The greatest number is c"); 
        }
            
        }
        
    }



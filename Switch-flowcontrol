// Switch case for Left Right UP Down

import java.util.*;
class switchCase{
    public static void main(String args[]){
        Scanner sc= new Scanner(System.in);
        char move=sc.next().charAt(0); ------
        // very important
        int x=0;int y=0;

        
        switch(move)
        {
            case 'L':
                x++;
                System.out.println(x);
                break;
                 
             case 'R':
                x--;
                 System.out.println(x);
                break;
             case 'U':
                y++;
                 System.out.println(y);
                break;
             case 'D':
                y--;
                 System.out.println(y);
                break;
                
            default:
            System.out.println("invalid input");
                
        }
    }
}


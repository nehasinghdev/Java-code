//sum of numbers else through the number is invalid
import java.util.*;
class Test{
    public static void main(String args[]){
        Scanner sc=new Scanner(System.in);
        int n=sc.nextInt();
        if(n<0)
            System.out.println("Invalid Input");
        else
            System.out.println(n*(n+1)/2);
        
        
    }
}
